{
  "name": "ikata",
  "version": "0.1.0",
  "description": "ikata programming language",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "lint:prettier": "prettier src --check",
    "lint:eslint": "eslint src",
    "lint": "run-p lint:*",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix": "run-s fix:*",
    "compile": "tsc -p ./",
    "exec": "node dist/main.js",
    "test": "mocha --require ts-node/register --watch-extensions ts \"src/test/**/*.ts\"",
    "routine": "run-s fix compile test exec",
    "monitor": "nodemon -e ts --ignore \"dist/*\" --exec \"npm run routine\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "@types/chai-subset": "^1.3.3",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "eslint": "^7.22.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "cac": "^6.7.3",
    "combinator-node": "^1.1.9",
    "glob": "^7.1.6"
  }
}
